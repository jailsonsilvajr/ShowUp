<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.appshow.showup">

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/icon_showup"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:screenOrientation="portrait"
            android:name=".activitys.InicioActivity"
            android:theme="@style/ThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activitys.LoginActivity"
            android:theme="@style/ThemeNoActionBar">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activitys.CadastroActivity"
            android:theme="@style/ThemeNoActionBar">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activitys.ArtistaInicioActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activitys.ArtistaBuscaActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activitys.ArtistaEventoActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activitys.ArtistaResultadoBuscaActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activitys.ArtistaConfiguracoesActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activitys.ArtistaContaActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".activitys.ArtistaAlterarPagamentoActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

    </application>

</manifest>