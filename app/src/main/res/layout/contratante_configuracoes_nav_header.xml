<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="220dp">

    <ImageView
        android:id="@+id/contratante_configuracoes_nav_header_image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <Button
        android:id="@+id/contratante_configuracoes_nav_header_button_configuracao"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_configuracao" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contratante_configuracoes_nav_header_image_perfil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/contratante_configuracoes_nav_header_textview_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:textColor="@color/textColorPrimary"/>

</RelativeLayout>
