                    android:textColor="@color/textColorSecundary"/>

                <View
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLineGray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="EQUIPAMENTOS DISPONÍVEIS"
                    android:textSize="7pt"
                    android:textColor="@color/textColorSecundary"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ListView
                            android:id="@+id/artista_evento_content_listview_equipamentos1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </ListView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ListView
                            android:id="@+id/artista_evento_content_listview_equipamentos2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </ListView>

                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLineGray"/>

                <TextView
                    android:id="@+id/artista_evento_content_nome_evento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="FESTA A FANTASIA"
                    android:textSize="10pt"
                    android:textColor="@color/textColorPrimary"/>

                <TextView
                    android:id="@+id/artista_evento_content_data_evento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DIA: 18/01"
                    android:textSize="7pt"
                    android:textColor="@color/textColorSecundary"/>

                <TextView
                    android:id="@+id/artista_evento_content_hora_evento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="HORA: 22H - 02H"
                    android:textSize="7pt"
                    android:textColor="@color/textColorSecundary"/>

                <TextView
                    android:id="@+id/artista_evento_content_requisitos_evento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
